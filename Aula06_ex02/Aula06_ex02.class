/*
Altere o ProgramaNotasArray para que imprima 
as notas na tela, depois de lidas, mostrando 
sua localização no array em termos de índice 
(de zero à quantidade - 1) e de ordem (de um
a quantidade).
 */
package aula06;

import java.util.Arrays;
import java.util.Scanner;

/**
 *
 * @author Fabiano
 */
public class Aula06_ex02 {
    public static void main(String[] args) {
        Scanner leia = new Scanner(System.in);
        System.out.println("Digite a quantidade de notas a serem lidas.");
        int quantidade = leia.nextInt();
        double notas[] = new double[quantidade];
        for(int i = 0; i < quantidade; i++){
            System.out.println("Digite a nota de número" + i);
            notas[i] = leia.nextDouble();
            System.out.println("A nota " + notas[i] + " está na posição " +  i);
        }               
    }
}
